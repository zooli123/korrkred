
<% if flash[:notice] %>
    <div id="notice"><%= flash[:notice] %></div>
<% end %>
<div class="backgroud_div">
<h2 class="signup"><%=t(:label_signup)%></h2>
  <div class="sign_up_div">
    <div class="sign_up_table_div">
      <%= form_for(@user) do |f| %>
      <div class="input_element">
        <%= f.label t(:label_login_name)+":", class: 'input_label'%>
        <%= f.text_field :login, class: 'input_field'%>
      </div>
      <div class="input_element">
        <%= f.label t(:label_firstname)+":", class: 'input_label' %>
        <%= f.text_field :firstname, class: 'input_field' %>
      </div>
      <div class="input_element">
        <%= f.label t(:label_lastname)+":", class: 'input_label' %>
        <%= f.text_field :lastname, class: 'input_field' %>
      </div>
      <div class="input_element">
        <%= f.label t(:label_password)+":", class: 'input_label' %>
        <%= f.password_field :password, class: 'input_field' %>
      </div>
      <div class="input_element">
        <%= f.submit t(:label_create_account)%>
      </div>
      <% end %>
    </div>
  </div>
</div>
