<div class="signup-form form-group">
<h2 class="signup"><%=t(:label_signup)%></h2>
  <div class="sign_up_div">
    <div class="sign_up_table_div">
      <%= form_for(@user) do |f| %>
      <div class="input_element">
        <%= f.label t(:label_login_name)+":", class: 'input_label'%>
        <%= f.text_field :login, class: 'input_field form-control'%>
      </div>
      <div class="input_element">
        <%= f.label t(:label_firstname)+":", class: 'input_label' %>
        <%= f.text_field :firstname, class: 'input_field form-control' %>
      </div>
      <div class="input_element">
        <%= f.label t(:label_lastname)+":", class: 'input_label' %>
        <%= f.text_field :lastname, class: 'input_field form-control' %>
      </div>
      <div class="input_element">
        <%= f.label t(:label_password)+":", class: 'input_label' %>
        <%= f.password_field :password, class: 'input_field form-control' %>
      </div>
      <div class="input_element submit_button">
        <%= f.submit t(:label_create_account), class: 'not_logged btn btn-primary'%>
      </div>
      <% end %>
    </div>
  </div>
  <%= link_to t(:label_back_to_login), login_path%>
</div>
