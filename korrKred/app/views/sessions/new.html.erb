<div class="login-form form-group">
	<h2 class="login"><%=t(:label_login)%></h2>
	<div class="login_div">
	  <div class="login_table_div">
	    <%= form_for(:session, url: login_path) do |f| %>
	    <div class="input_element">
	      <%= f.label t(:label_login_name)+":", class: 'input_label' %>
	      <%= f.text_field :login, class: 'input_field form-control'%>
			</div>
      <div class="input_element">
	      <%= f.label t(:label_password)+":", class: 'input_label' %>
	      <%= f.password_field :password, class: 'input_field form-control'%>
			</div>
      <div class="input_element submit_button">
	      <%= f.submit t(:label_login), class: 'not_logged btn btn-primary'%>
	    </div>
	    <% end %>
	  </div>
	 </div>
 <p><%=t(:label_new_user)+"?"%> <%= link_to t(:label_signup_now)+"!", signup_path %></p>
</div>

