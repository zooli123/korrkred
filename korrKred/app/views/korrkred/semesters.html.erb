<% if flash[:success]%>
  <div id="success"><%= flash[:success] %></div>
<% end %>
<% if flash[:notice] %>
  <div id="notice"><%= flash[:notice] %></div>
<% end %>
  <div class="background_div">
  <%=link_to t(:label_back_to_home), home_path, class: "back_to_home_link"%>
  <h2 class="semesters"><%=t(:label_semesters)%></h2>
    <div class="semesters_div">
      <div class="semesters_table_div">
        <% # year szerinti sorrend, ha egy year-ben több half_year van, egy sorba kerül, egyébként külön sorba
        if !@semesters.empty?
        year = @semesters[0] ? @semesters[0].year : 0%>
        <ul>
          <%=@semesters[0].year.to_s%>:
          <%for semester in @semesters%>
            <%if semester.year != year%>
            </ul>
            <ul>
              <%=semester.year.to_s%>:
            <%end
            year = semester.year
            %>
            <li>
              <%=form_tag(delete_semester_path, method:"post", class: "form_next_to_li") do%>
              <%= link_to semester.title, "/semesters/"+ semester.id.to_s, class: "existing_semesters" %>
                <%=hidden_field_tag 'semester_id', semester.id%>
                <%= submit_tag t(:label_delete), class: "form_element_in_table delete_semester"%>
              <%end%>
            </li>
          <%end%>
        </ul>
        <%end%>
      </div>
    </div>
   <%= render partial: "new_semester"%>
    <div id="add_new_semester_button"><%=t(:label_add_new_semester)%><div/>
  </div>